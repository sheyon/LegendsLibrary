<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:padding="8dp"
    android:orientation="vertical"
    android:background="@color/backgroundAccent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="There was an error. The application will close. The following text is being sent to the author for investigation:"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/popup_error_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="ERROR TEXT"
        android:textColor="@android:color/white" />

    <Button
        android:id="@+id/popup_button_dismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/popup_close"/>

</LinearLayout>